{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",  // Assuming your API routes are prefixed with /api
            "dest": "/backend/app.js"
        },
        {
            "src": "/(.*)", 
            "dest": "/frontend/dist/$1" // Serve the frontend build files
        }
    ]
}
